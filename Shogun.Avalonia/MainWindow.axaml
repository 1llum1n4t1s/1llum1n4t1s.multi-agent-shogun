<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
        xmlns:vm="clr-namespace:Shogun.Avalonia.ViewModels"
        xmlns:models="clr-namespace:Shogun.Avalonia.Models"
        xmlns:local="clr-namespace:Shogun.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="Shogun.Avalonia.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Shogun.Avalonia - AI Command Center"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="vm:AgentPaneViewModel" x:Key="AgentPaneTemplate">
            <Border BorderThickness="1"
                    BorderBrush="{actipro:ThemeResource Container2BorderBrush}"
                    Background="{actipro:ThemeResource Container1BackgroundBrush}"
                    CornerRadius="4"
                    Padding="0"
                    Margin="0,0,0,6"
                    MinHeight="80">
                <Grid RowDefinitions="Auto,*">
                    <Border Grid.Row="0"
                            Background="{actipro:ThemeResource Container2BackgroundBrush}"
                            Padding="8,6"
                            CornerRadius="4,4,0,0">
                        <TextBlock Text="{Binding DisplayName}"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </Border>
                    <ScrollViewer Grid.Row="1"
                                  Padding="8,6"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Blocks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:PaneBlock">
                                    <Border BorderThickness="0,0,0,1"
                                            BorderBrush="{actipro:ThemeResource Container2BorderBrush}"
                                            Padding="6,4"
                                            Margin="0,0,0,4">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="{Binding Content}"
                                                       TextWrapping="Wrap"
                                                       FontFamily="Cascadia Code, Consolas, Menlo, Monospace"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Status}" FontSize="11"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
        <Border Grid.Row="0" Padding="8,4">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="8,0">
                    <TextBlock.Text>
                        <Binding Path="IsAiProcessing">
                            <Binding.Converter>
                                <local:BoolToStatusConverter/>
                            </Binding.Converter>
                        </Binding>
                    </TextBlock.Text>
                </TextBlock>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button Content="プロジェクト設定" Click="OnProjectSettingsClick"/>
                    <Button Content="設定" Click="OnSettingsClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" RowDefinitions="*,Auto">
            <TabControl Grid.Row="0" Margin="4">
                <TabItem Header="エージェント">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*">
                <Border Grid.Column="0" BorderThickness="2" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="8" Margin="0,0,2,0">
                    <Grid RowDefinitions="Auto,*,*">
                        <Border Grid.Row="0" Background="{actipro:ThemeResource Container2BackgroundBrush}" Padding="4,6" Margin="0,0,0,8" CornerRadius="4">
                            <TextBlock Text="将軍・家老" FontWeight="SemiBold" FontSize="14"/>
                        </Border>
                        <ContentPresenter Grid.Row="1" Content="{Binding LeftPane0}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="2" Content="{Binding LeftPane1}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                    </Grid>
                </Border>
                <Border Grid.Column="1" BorderThickness="2" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="8" Margin="2,0">
                    <Grid RowDefinitions="Auto,*,*,*,*">
                        <Border Grid.Row="0" Background="{actipro:ThemeResource Container2BackgroundBrush}" Padding="4,6" Margin="0,0,0,8" CornerRadius="4">
                            <TextBlock Text="足軽 1-4" FontWeight="SemiBold" FontSize="14"/>
                        </Border>
                        <ContentPresenter Grid.Row="1" Content="{Binding CenterPane0}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="2" Content="{Binding CenterPane1}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="3" Content="{Binding CenterPane2}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="4" Content="{Binding CenterPane3}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                    </Grid>
                </Border>
                <Border Grid.Column="2" BorderThickness="2" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="8" Margin="2,0,0,0">
                    <Grid RowDefinitions="Auto,*,*,*,*">
                        <Border Grid.Row="0" Background="{actipro:ThemeResource Container2BackgroundBrush}" Padding="4,6" Margin="0,0,0,8" CornerRadius="4">
                            <TextBlock Text="足軽 5-8" FontWeight="SemiBold" FontSize="14"/>
                        </Border>
                        <ContentPresenter Grid.Row="1" Content="{Binding RightPane0}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="2" Content="{Binding RightPane1}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="3" Content="{Binding RightPane2}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                        <ContentPresenter Grid.Row="4" Content="{Binding RightPane3}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                    </Grid>
                </Border>
            </Grid>
                </TabItem>
                <TabItem Header="ダッシュボード">
                    <Grid RowDefinitions="Auto,*" Margin="8">
                        <Button Grid.Row="0" Content="更新" Command="{Binding RefreshDashboardCommand}" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1" Text="{Binding DashboardContent}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" FontFamily="Cascadia Code, Consolas, Monospace" FontSize="12"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <Border Grid.Row="1"
                    Padding="8,6"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{actipro:ThemeResource Container2BorderBrush}">
                <Grid RowDefinitions="Auto,Auto">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,6">
                        <TextBlock Text="プロジェクト:" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding Projects}"
                                  SelectedItem="{Binding SelectedProject}"
                                  MinWidth="200"
                                  HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding ChatInput}"
                                 Watermark="メッセージを入力..."
                                 IsEnabled="{Binding !IsAiProcessing}"
                                 KeyDown="OnChatInputKeyDown"/>
                        <Button Grid.Column="1"
                                Content="送信"
                                Click="OnSendButtonClick"
                                IsEnabled="{Binding !IsAiProcessing}"
                                Margin="8,0,0,0"
                                MinWidth="60"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        </Grid>

        <!-- 起動準備オーバーレイ（UI テーマに合わせた背景・文字色） -->
        <Border IsVisible="{Binding IsLoading}"
                Background="{actipro:ThemeResource Container1BackgroundBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Opacity="0.95">
            <Grid Margin="48,0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Spacing="12">
                    <TextBlock Text="{Binding LoadingMessage}"
                               FontSize="16"
                               HorizontalAlignment="Stretch"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                    <TextBlock Text="しばらくお待ちください..."
                               FontSize="12"
                               HorizontalAlignment="Stretch"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
