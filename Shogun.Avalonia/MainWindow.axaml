<Window xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
       xmlns:vm="clr-namespace:Shogun.Avalonia.ViewModels"
       xmlns:models="clr-namespace:Shogun.Avalonia.Models"
       xmlns:local="clr-namespace:Shogun.Avalonia"
       xmlns:converters="clr-namespace:Shogun.Avalonia.Converters"
       mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
       x:Class="Shogun.Avalonia.MainWindow"
       x:DataType="vm:MainWindowViewModel"
       Title="Shogun.Avalonia - AI Command Center"
       Width="1400" Height="900"
       MinWidth="900" MinHeight="600"
       WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:StatusDotColorConverter x:Key="StatusDotColorConverter"/>
        <converters:AgentStatusToBrushConverter x:Key="AgentStatusToBgConverter"/>
        <DataTemplate x:Key="AgentPaneTemplate" x:DataType="vm:AgentPaneViewModel">
            <Border BorderThickness="1"
                    BorderBrush="{actipro:ThemeResource Container2BorderBrush}"
                    Background="{actipro:ThemeResource Container1BackgroundBrush}"
                    CornerRadius="2"
                    Padding="0"
                    Margin="0"
                    MinHeight="80">
                <Grid RowDefinitions="Auto,*">
                    <!-- ヘッダーエリア -->
                    <Border Grid.Row="0"
                            Background="{actipro:ThemeResource Container2BackgroundBrush}"
                            Padding="6,3"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{actipro:ThemeResource Container2BorderBrush}">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="{Binding DisplayName}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ModelInfo}"
                                           FontSize="10"
                                           Foreground="{actipro:ThemeResource DefaultForegroundBrushSecondary}"
                                           VerticalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>
                            <Border Grid.Column="1"
                                    Background="{Binding AgentStatus, Converter={StaticResource AgentStatusToBgConverter}}"
                                    CornerRadius="3" Padding="6,1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding AgentStatus}"
                                           FontSize="9"
                                           Foreground="White"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- コンテンツエリア -->
                    <ScrollViewer Grid.Row="1"
                                  Padding="0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  ScrollChanged="OnAgentPaneScrollChanged">
                        <ItemsControl ItemsSource="{Binding Blocks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:PaneBlock">
                                    <Border BorderThickness="0,0,0,1"
                                            BorderBrush="{actipro:ThemeResource Container2BorderBrush}"
                                            Padding="6,4"
                                            Margin="0">
                                        <StackPanel Spacing="2">
                                            <!-- ステータス行 -->
                                            <TextBlock Text="{Binding Status}"
                                                       IsVisible="{Binding Status, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                       Foreground="{actipro:ThemeResource DefaultForegroundBrushSecondary}"
                                                       FontSize="11"
                                                       Opacity="0.8"/>

                                            <!-- 本文 -->
                                            <TextBlock Text="{Binding Content}"
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       LineHeight="18"/>

                                            <!-- 確認ボタン（家老のコード改修確認用） -->
                                            <StackPanel Spacing="6" Margin="0,6,0,0" IsVisible="{Binding ShowApprovalButtons}">
                                                <TextBlock Text="コード改修を実行しますか？"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Button Content="許可"
                                                            Padding="12,6"
                                                            Click="OnApproveKaroExecution"
                                                            Tag="{Binding BlockId}"/>
                                                    <Button Content="却下"
                                                            Padding="12,6"
                                                            Click="OnRejectKaroExecution"
                                                            Tag="{Binding BlockId}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- タイムスタンプ -->
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{actipro:ThemeResource DefaultForegroundBrushSecondary}"
                                                       FontSize="9"
                                                       Opacity="0.5"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
            <!-- ヘッダー（ステータス＋プロジェクト選択＋家老権限＋ボタン） -->
            <Border Grid.Row="0" Padding="8,4"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{actipro:ThemeResource Container2BorderBrush}">
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto,Auto">
                    <!-- ステータスドット -->
                    <Ellipse Grid.Column="0" Width="8" Height="8"
                             Fill="{Binding IsAiProcessing, Converter={StaticResource StatusDotColorConverter}}"
                             VerticalAlignment="Center" Margin="8,0,6,0"/>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               FontSize="12">
                        <TextBlock.Text>
                            <Binding Path="IsAiProcessing">
                                <Binding.Converter>
                                    <local:BoolToStatusConverter/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.Text>
                    </TextBlock>

                    <!-- プロジェクト選択 -->
                    <TextBlock Grid.Column="2" Text="PJ:" VerticalAlignment="Center"
                               FontSize="12" Opacity="0.7" Margin="20,0,6,0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              MinWidth="200" MaxWidth="350">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 家老権限モード -->
                    <TextBlock Grid.Column="5" Text="家老:" VerticalAlignment="Center"
                               FontSize="11" Opacity="0.6" Margin="12,0,4,0"/>
                    <ComboBox Grid.Column="6" ItemsSource="{Binding KaroPermissionModeOptions}"
                              SelectedItem="{Binding KaroExecutionPermissionMode}"
                              MinWidth="120" FontSize="11"
                              ToolTip.Tip="AlwaysAllow: 自動実行 / AlwaysReject: 分析のみ / PromptUser: 確認"/>

                    <!-- 設定ボタン -->
                    <StackPanel Grid.Column="7" Orientation="Horizontal" Spacing="4" Margin="12,0,0,0">
                        <Button Content="PJ設定" Click="OnProjectSettingsClick" Padding="8,3" FontSize="11"/>
                        <Button Content="設定" Click="OnSettingsClick" Padding="8,3" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- メインコンテンツエリア -->
            <Grid Grid.Row="1" RowDefinitions="*,Auto">
                <!-- タブコントロール（エージェント＆ダッシュボード） -->
                <TabControl Grid.Row="0" Margin="4">
                    <!-- エージェントタブ -->
                    <TabItem Header="エージェント">
                        <Grid ColumnDefinitions="0.8*,1.1*,1.1*" RowDefinitions="*">
                            <!-- 将軍・家老 -->
                            <Border Grid.Column="0" Grid.Row="0" BorderThickness="1" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="4" Margin="0,0,4,0">
                                <Grid RowDefinitions="*,Auto,*">
                                    <ContentControl Grid.Row="0" Content="{Binding LeftPane0}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                                    <GridSplitter Grid.Row="1" Height="4" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,2"/>
                                    <ContentControl Grid.Row="2" Content="{Binding LeftPane1}" ContentTemplate="{StaticResource AgentPaneTemplate}"/>
                                </Grid>
                            </Border>
                            <!-- 足軽 1-N/2（UniformGrid で縦方向に均等配置：足軽数に応じてフィル） -->
                            <Border Grid.Column="1" Grid.Row="0" BorderThickness="1" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="4" Margin="4,0">
                                <ItemsControl ItemsSource="{Binding CenterPanes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="1"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:AgentPaneViewModel">
                                            <ContentControl Content="{Binding}" ContentTemplate="{StaticResource AgentPaneTemplate}" Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                            <!-- 足軽 N/2+1～N（UniformGrid で縦方向に均等配置、レスポンシブ: 幅 < 1050px で非表示） -->
                            <Border Grid.Column="2" Grid.Row="0" BorderThickness="1" BorderBrush="{actipro:ThemeResource Container2BorderBrush}" Background="{actipro:ThemeResource Container1BackgroundBrush}" CornerRadius="4" Padding="4" Margin="4,0,0,0"
                                    IsVisible="{Binding IsWideLayout}">
                                <ItemsControl ItemsSource="{Binding RightPanes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="1"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:AgentPaneViewModel">
                                            <ContentControl Content="{Binding}" ContentTemplate="{StaticResource AgentPaneTemplate}" Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </Grid>
                    </TabItem>
                    <!-- ダッシュボードタブ -->
                    <TabItem Header="ダッシュボード">
                        <Grid RowDefinitions="*" Margin="8">
                            <ScrollViewer ScrollChanged="OnDashboardScrollChanged">
                                <TextBox Text="{Binding DashboardContent}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" FontFamily="Cascadia Code, Consolas, Monospace" FontSize="12" BorderThickness="0"/>
                            </ScrollViewer>
                            <!-- フローティング更新ボタン -->
                            <Button Content="更新"
                                    Command="{Binding RefreshDashboardCommand}"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Margin="0,4,16,0" Padding="8,4" FontSize="11" Opacity="0.8"/>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- 下部：メッセージ入力エリア -->
                <Border Grid.Row="1"
                        Padding="8,6"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{actipro:ThemeResource Container2BorderBrush}">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding ChatInput}"
                                 Watermark="メッセージを入力（Shift+Enter で改行、Enter で送信）..."
                                 IsEnabled="{Binding !IsAiProcessing}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="40"
                                 MaxHeight="120"
                                 Padding="8,6"
                                 KeyDown="OnChatInputKeyDown"
                                 FontSize="13"/>
                        <StackPanel Grid.Column="1" Spacing="4" Margin="6,0,0,0" VerticalAlignment="Bottom">
                            <Button Content="送信"
                                    Click="OnSendButtonClick"
                                    IsEnabled="{Binding !IsAiProcessing}"
                                    MinWidth="60"
                                    Padding="10,6"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                            <Button Content="新規"
                                    Click="OnSendAsNewButtonClick"
                                    IsEnabled="{Binding !IsAiProcessing}"
                                    MinWidth="60"
                                    Padding="10,6"
                                    FontSize="11"
                                    ToolTip.Tip="キューをリセットして新規で送信"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 起動準備オーバーレイ（起動完了後は非表示） -->
        <Border IsVisible="{Binding IsLoading}"
                Background="{actipro:ThemeResource Container1BackgroundBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Opacity="0.98"
                ZIndex="1000">
            <Grid Margin="48,0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Spacing="12">
                    <TextBlock Text="{Binding LoadingMessage}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Stretch"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                    <TextBlock Text="しばらくお待ちください..."
                               FontSize="13"
                               HorizontalAlignment="Stretch"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
